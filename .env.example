# Edulution Moodle Environment Variables
# Copy this file to .env and adjust values

# Domain (REQUIRED - your edulution domain)
EDULUTION_BASE_DOMAIN=ui.example.com

# Moodle Path (default: /moodle-app)
# This is the URL path where Moodle will be accessible
# e.g., https://ui.example.com/moodle-app
MOODLE_PATH=/moodle-app

# Database
MOODLE_DB_USER=moodle
MOODLE_DB_PASSWORD=changeme_secure_password
MOODLE_DB_NAME=moodle
MOODLE_DB_ROOT_PASSWORD=changeme_root_password

# Admin User
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASSWORD=Edulution2024!
MOODLE_ADMIN_EMAIL=admin@example.com
MOODLE_SITE_NAME=Edulution Moodle

# SSO (Keycloak)
ENABLE_SSO=0
KEYCLOAK_CLIENT_ID=moodle
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Debug (set to true for troubleshooting)
MOODLE_DEBUG=false
