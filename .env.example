# Edulution Moodle - Environment Configuration
# Copy to .env and adjust values

# =============================================================================
# DATABASE
# =============================================================================
MOODLE_DATABASE_HOST=db
MOODLE_DATABASE_NAME=moodle
MOODLE_DATABASE_USER=moodle
MOODLE_DATABASE_PASSWORD=changeme

# =============================================================================
# MOODLE
# =============================================================================
MOODLE_WWWROOT=http://localhost:8080
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASSWORD=changeme
MOODLE_ADMIN_EMAIL=admin@example.com
MOODLE_SITE_NAME=Moodle

# Reverse Proxy (Traefik etc.)
MOODLE_REVERSEPROXY=false
MOODLE_SSLPROXY=false

# iFrame Embedding
MOODLE_ALLOWFRAMEMBEDDING=true

# =============================================================================
# EDULUTION PLUGIN - KEYCLOAK (Optional)
# These environment variables take precedence over admin settings in Moodle
# =============================================================================
# EDULUTION_KEYCLOAK_URL=https://auth.example.com
# EDULUTION_KEYCLOAK_REALM=master
# EDULUTION_KEYCLOAK_CLIENT_ID=moodle
# EDULUTION_KEYCLOAK_CLIENT_SECRET=your-client-secret
# EDULUTION_KEYCLOAK_SYNC_ENABLED=false
# EDULUTION_VERIFY_SSL=true

# =============================================================================
# EDULUTION PLUGIN - COOKIE AUTH / SSO (Optional)
# =============================================================================
# EDULUTION_COOKIE_AUTH_ENABLED=false
# EDULUTION_COOKIE_AUTH_COOKIE_NAME=authToken

# =============================================================================
# REDIS (Optional)
# =============================================================================
# REDIS_HOST=redis
# REDIS_PORT=6379
