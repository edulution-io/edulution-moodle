<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/edulution/db" VERSION="20240218" COMMENT="XMLDB file for Moodle local/edulution"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <!-- User mapping table: maps Keycloak user IDs to Moodle user IDs -->
    <TABLE NAME="local_edulution_user_map" COMMENT="Maps Keycloak users to Moodle users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="keycloak_id" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Keycloak user UUID"/>
        <FIELD NAME="moodle_userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Moodle user ID"/>
        <FIELD NAME="keycloak_username" TYPE="char" LENGTH="255" NOTNULL="false" COMMENT="Keycloak username"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_moodle_userid" TYPE="foreign" FIELDS="moodle_userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="keycloak_id" UNIQUE="true" FIELDS="keycloak_id"/>
      </INDEXES>
    </TABLE>

    <!-- Sync log table: records sync operations -->
    <TABLE NAME="local_edulution_sync_log" COMMENT="Log of sync operations">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="User who triggered sync"/>
        <FIELD NAME="synctype" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="full" COMMENT="Type: full, users, groups, enrollments"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" COMMENT="Status: pending, running, completed, failed"/>
        <FIELD NAME="users_created" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="users_updated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="users_skipped" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="groups_created" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="groups_updated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="enrollments_created" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="enrollments_removed" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="errors" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="error_details" TYPE="text" NOTNULL="false" COMMENT="JSON array of error messages"/>
        <FIELD NAME="duration" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Duration in seconds"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timefinished" TYPE="int" LENGTH="10" NOTNULL="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>

    <!-- Activity log table: general activity tracking -->
    <TABLE NAME="local_edulution_activity" COMMENT="Activity log for dashboard">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="type" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Activity type: sync, export, import, etc."/>
        <FIELD NAME="description" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="success"/>
        <FIELD NAME="data" TYPE="text" NOTNULL="false" COMMENT="JSON additional data"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="type" UNIQUE="false" FIELDS="type"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>

    <!-- Export history table -->
    <TABLE NAME="local_edulution_exports" COMMENT="Export history">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="exporttype" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Type of export"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="filepath" TYPE="char" LENGTH="512" NOTNULL="false"/>
        <FIELD NAME="filesize" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="completed"/>
        <FIELD NAME="options" TYPE="text" NOTNULL="false" COMMENT="JSON export options"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>

    <!-- Sync reports table -->
    <TABLE NAME="local_edulution_sync_reports" COMMENT="Detailed sync reports">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timefinished" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="duration" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="created_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="updated_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="skipped_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="error_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="success" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="report_data" TYPE="text" NOTNULL="false" COMMENT="Full JSON report"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>

    <!-- Sync jobs table: tracks background sync jobs -->
    <TABLE NAME="local_edulution_sync_jobs" COMMENT="Background sync job status">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sync_id" TYPE="char" LENGTH="100" NOTNULL="true" COMMENT="Unique sync job identifier"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="User who started the sync"/>
        <FIELD NAME="direction" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="from_keycloak"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" COMMENT="pending, processing, completed, failed, cancelled"/>
        <FIELD NAME="phase" TYPE="char" LENGTH="50" NOTNULL="false" COMMENT="Current sync phase"/>
        <FIELD NAME="progress" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" COMMENT="Progress 0-100"/>
        <FIELD NAME="processed" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="total" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="created_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="updated_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="deleted_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="error_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="error_details" TYPE="text" NOTNULL="false" COMMENT="JSON array of error messages"/>
        <FIELD NAME="log_entries" TYPE="text" NOTNULL="false" COMMENT="JSON array of log entries"/>
        <FIELD NAME="report_id" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Link to sync report"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timefinished" TYPE="int" LENGTH="10" NOTNULL="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sync_id" UNIQUE="true" FIELDS="sync_id"/>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
